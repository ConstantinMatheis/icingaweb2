<div class="modal-window">
    <div class="modal-header">
        <h5 class="modal-title">Add Report</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <i class="icon-cancel" aria-hidden="true"></i>
        </button>
    </div>
  <div class="modal-area">
    <div class="modal-sidebar"> <!-- #menu -->
      <ul> <!-- nav nav-level-1 -->
        <li class="active">  <!-- nav-item badge-nav-item(?) -->
          <i class="icon-beaker" aria-hidden="true"></i>
          <p>Monitoring</p>
        </li>
        <li>
          <i class="icon-barchart" aria-hidden="true"></i>
          <p>Morenitoring</p>
        </li>
      </ul>
    </div>
    <div class="modal-content">
      <div class="modal-body">
        <div class="modal-search">
          <label for="srch" class="search-label">
            <i class="icon-search" aria-hidden="true"></i>
          </label>
          <input id="srch" type="search" placeholder="Search...">
        </div>
        <div class="modal-reports">
          <div class="report-types">
            <div class="report-type">
              <div class="report-tile active">
                <div class="report-preview"><i class="icon-chart-area" aria-hidden="true"></i></div>
                <p>SLA</p>
              </div>
            </div>
            <div class="report-type">
              <div class="report-tile">
                <div class="report-preview"><i class="icon-chart-bar" aria-hidden="true"></i></div>
                <p>Availability Diagram</p>
              </div>
            </div>
            <div class="report-type">
              <div class="report-tile">
                <div class="report-preview"><i class="icon-chart-line" aria-hidden="true"></i></div>
                <p>Host State Distribution</p>
              </div>
            </div>
            <div class="report-type">
              <div class="report-tile">
                <div class="report-preview"><i class="icon-chart-pie" aria-hidden="true"></i></div>
                <p>Top 10 Problem Hosts</p>
              </div>
            </div>
          </div>
          <div class="modal-form">
            < this is where the form content goes >
          </div>
        </div>
      </div>
    <div class="modal-footer">
      <div class="right">
          <button type="button" class="btn btn-primary control-button">Add SLA Report</button>
      </div>
    </div>
  </div>
</div>
